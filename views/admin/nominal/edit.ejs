<%- include ../../partials/header.ejs  %>
<%- include ../../partials/navbar.ejs  %>
<%- include ../../partials/sidebar.ejs  %>


<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Nominal</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/category">Nominal</a></li>
            <li class="breadcrumb-item active">Edit</li>
          </ol>
        </div>
      </div>
    </div><!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title">Form Edit Nominal</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form  action="/nominal/edit/<%= nominal._id %>?_method=PUT" method="POST">
              <div class="card-body">
                <div class="form-group">
                  <label>Coin Name</label>
                  <select class="form-control select2" style="width: 100%;" name="coinName" required>
                    <option selected="selected">Choose coin</option>
                    <option value="gold"
                    <% if(nominal.coinName === "gold") {%> 
                      selected
                    <% } %> 
                    >
                      Gold
                    </option>
                    <option value="diamond"
                    <% if(nominal.coinName === "diamond") {%> 
                      selected
                    <% } %> >
                      Diamond
                    </option>
                    <option value="jewel"
                    <% if(nominal.coinName === "jewel") {%> 
                      selected
                    <% } %> 
                    >
                      Jewel
                    </option>
                  </select>
                </div>
                <div class="form-group">
                  <label for="coinQuantity">Coin Quantity</label>
                  <input value="<%= nominal.coinQuantity  %>" type="number" name="coinQuantity" class="form-control" id="coinQuantity" placeholder="coin quantity" required>
                </div>
                <div class="form-group">
                  <label for="price">Price</label>
                  <input value="<%= nominal.price  %>" type="text" name="price" class="form-control" id="price" placeholder="price" required>
                </div>
              </div>
              <!-- /.card-body -->

              <div class="card-footer">
                <button type="submit" class="btn btn-primary">Update</button>
              </div>
            </form>
          </div>
          <!-- /.card -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>

<%- include ../../partials/footer.ejs  %>
<%- include ../../partials/js.ejs  %></div>